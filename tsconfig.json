{
    "compilerOptions": {
      "baseUrl": "./",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "checkJs": false,
      "lib": [
        "ES2021"
      ],
      "module": "commonjs",
      "target": "ES2021",
      "types": [
        "node",
        "jest"
      ],
      "declaration": true,
      "stripInternal": true,
      "outDir": "dist"
    },
    "include": [
      "src"
    ],
    "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}